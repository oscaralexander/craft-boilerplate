{
  "formatting": [
    "p",
    "blockquote",
    "h4"
  ],
  "formattingAdd": {
    "p-large": {
      "api": "module.block.format",
      "args": {
        "class": "large",
        "tag": "p"
      },
      "title": "Large"
    }
  },
  "buttons": [
    "html",
    "formatting",
    "bold",
    "italic",
    "unorderedlist",
    "orderedlist",
    "link",
    "image",
    "video"
  ],
  "plugins": [
    "customstyles",
    "fullscreen"
  ],
  "imagePosition": {
    "left": "image-left",
    "right": "image-right",
    "center": "image-center"
  },
  "linkNewTab": true,
  "toolbarFixed": true
}
