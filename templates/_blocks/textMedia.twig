<section class="textMedia textMedia--image{{ block.imagePlacement|ucfirst }} textMedia--text{{ block.textPosition|ucfirst }} block {{ block.theme.one() ? "u-" ~ block.theme.one().slug : "" }}">
    <div class="wrapper">
        <div class="textMedia__split">
            <div class="textMedia__text">
                <header class="block__header">
                    <h2 class="block__heading">{{ block.heading }}</h2>
                    <div class="block__intro">{{ block.intro }}</div>
                </header>
                <div class="text__body richText">
                    {{ block.text|replace("<img", "<img loading=\"lazy\"")|raw }}
                </div>
            </div>
            <div class="textMedia__media">
                {% set image = block.image.one() %}
                {% if image %}
                    <img alt="{{ block.heading }}" loading="lazy" src="{{ image.getUrl() }}">
                {% else %}
                    {% if block.embedHtml %}
                        <div class="textMedia__embed textMedia__embed--{{ block.embedAspectRatio}}">
                            {{ block.embedHtml|raw }}
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</section>