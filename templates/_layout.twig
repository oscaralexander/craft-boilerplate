{% set translations = [] %}
{# cache #}
    {% for site in craft.app.sites.getAllSites() %}
        {% set translation = craft.entries.id(entry.id).site(site.handle).one() %}
        {% if translation %}
            {% set translations = translations|merge([{lang: site.name, langCode: site.handle, siteId: site.id, url: translation.url}]) %}
        {% endif %}
    {% endfor %}
{# endcache #}
<html lang="{{ craft.app.language }}">
    <head>
        <meta charset="utf-8">
        <meta content="IE=edge" http-equiv="X-UA-Compatible">
        <meta content="initial-scale=1.0,viewport-fit=cover,width=device-width" name="viewport">
        <title>{{ systemName }}</title>
        {% for translation in translations %}
            {% if translation.siteId != currentSite.id %}
                <link href="{{ translation.url|replace("home", "") }}" hreflang="{{ translation.langCode }}" rel="alternate">
            {% endif %}
        {% endfor %}
        <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
        <link href="https://fonts.googleapis.com" rel="preconnect">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500&family=Nunito:wght@700;800&display=swap" rel="stylesheet">
        <!--
        <link href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@300;400;500&display=swap" rel="stylesheet">
        -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
        <link href="/assets/css/style.css" rel="stylesheet" type="text/css">
        {{ craft.vite.script("src/js/index.ts", false) }}
        {% block head %}{% endblock %}
        {% include "_partials/schema" %}
    </head>
    <body class="js-analytics">
        {% include "_partials/nav" %}
        <div class="page">
            <main class="page__main">
                <section class="block hero js-hero">
                    <div class="wrapper">
                        <div class="hero__inner">
                            <div class="hero__content">
                                <h1 class="hero__heading">Op zoek naar een inspirerende werkplek én een fijn netwerk?</h1>
                                <div>
                                    <div class="hero__text">
                                        <p>
                                            Met vijf co-working spaces, verspreid over heel Nederland, is de kans groot dat er óók voor jou een fijne werkplek te vinden is.
                                        </p>
                                    </div>
                                    <div class="hero__ctas">
                                        <a class="btn btn--primary" href="#">Maak kennis</a>
                                        <a class="arrowLink" href="#">Lees meer</a>
                                    </div>
                                </div>
                            </div>
                            <div class="hero__images js-heroImages">
                                <div class="hero__image js-heroImage">
                                    <img alt="" src="https://plus.unsplash.com/premium_photo-1689298467812-e9a6c3866a87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2370&q=80">
                                </div>
                                <div class="hero__image js-heroImage">
                                    <img alt="" src="https://images.unsplash.com/photo-1689257693246-6fea2884c4be?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2371&q=80">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                {% block content %}{% endblock %}
            </main>
            {% include "_partials/footer" %}
        </div>
    </body>
</html>